{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./out",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "snippets/**/*.code-snippets",
    ".github/**/*.md"
  ],
  "exclude": [
    "node_modules",
    "out",
    "test"
  ],
  "typeAcquisition": {
    "include": [
      "vscode",
      "node"
    ]
  },
  "vscode": {
    "snippetIntelliSense": {
      "enabled": true,
      "autoTrigger": true,
      "contextAware": true,
      "patterns": {
        "clean-*": "Clean Architecture patterns for domain-driven design",
        "flb-*": "Flutter BLoC state management patterns",
        "flp-*": "Flutter Provider state management patterns", 
        "flr-*": "Flutter Riverpod state management patterns",
        "fls-*": "Flutter setState patterns for local state",
        "flw-*": "Flutter widgets with Material Design 3",
        "flm3-*": "Material Design 3 specific components",
        "fla-*": "Flutter animations and custom painters",
        "fln-*": "Flutter navigation components",
        "flf-*": "Flutter forms with validation",
        "flap-*": "Flutter specialized app bars"
      }
    }
  }
}
